<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All check ins
    </h1>

    <a href="/check_ins/new" class="btn btn-block btn-outline-secondary">
      Add a new check in
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "check_in_templates/check_ins_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Location
        </th>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @check_ins.each do |check_in| %>
      <tr>
        <!-- Display check_in.id start -->
        <td>
          <%= check_in.id %>
        </td>
        <!-- Display check_in.id end -->

        <!-- Display check_in.owner_id start -->
        <td>
          <% if check_in.owner.present? %>
            <a href="/users/<%= check_in.owner.id %>">
              <%= check_in.owner.email %>
            </a>
          <% end %>
        </td>
        <!-- Display check_in.owner_id end -->

        <!-- Display check_in.location_id start -->
        <td>
          <% if check_in.location.present? %>
            <a href="/locations/<%= check_in.location.id %>">
              <%= check_in.location.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display check_in.location_id end -->

        <!-- Display check_in.image start -->
        <td>
          <img src='<%= check_in.image %>' class='img-fluid'>
        </td>
        <!-- Display check_in.image end -->

        <!-- Display check_in.caption start -->
        <td>
          <%= check_in.caption %>
        </td>
        <!-- Display check_in.caption end -->

        <!-- Display check_in.created_at start -->
        <td>
          <%= time_ago_in_words(check_in.created_at) %> ago
        </td>
        <!-- Display check_in.created_at end -->

        <!-- Display check_in.updated_at start -->
        <td>
          <%= time_ago_in_words(check_in.updated_at) %> ago
        </td>
        <!-- Display check_in.updated_at end -->

        <td>
          <a href="/check_ins/<%= check_in.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @check_ins, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
