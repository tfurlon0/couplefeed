<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#location_likes_new_form">
      Add like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.likes.each do |like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/likes/<%= like.id %>">
          <%= like.author_id %>
        </a>

        <a href="/delete_like_from_location/<%= like.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_likes_new_form">
        <%= render partial: "location_templates/location_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
