<form action="/create_like_from_location" method="post">

  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <%= select_tag(:author_id, options_from_collection_for_select(User.all, :id, :email, @like.author_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="photo_id">
      Photo
    </label>

    <%= select_tag(:photo_id, options_from_collection_for_select(Photo.all, :id, :author_id, @like.photo_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="location_id" value="<%= @location.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create like
  </button>
</form>
