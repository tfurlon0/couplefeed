<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Check Ins

    <a data-toggle="collapse" href="#location_check_ins_new_form">
      Add check in
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.check_ins.each do |check_in| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/check_ins/<%= check_in.id %>">
          <%= check_in.owner_id %>
        </a>

        <a href="/delete_check_in_from_location/<%= check_in.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_check_ins_new_form">
        <%= render partial: "location_templates/location_check_ins_new_form" %>
      </div>
    </div>

  </ul>
</div>
