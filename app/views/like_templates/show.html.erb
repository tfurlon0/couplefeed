<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/likes/<%= @like.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit like
        </a>
      </div>

      <div class="col">
        <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-outline-secondary">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Author
      </dt>
      <dd>
        <% if @like.author.present? %>
          <a href="/users/<%= @like.author_id %>">
            <%= @like.author.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <% if @like.photo.present? %>
          <a href="/photos/<%= @like.photo_id %>">
            <%= @like.photo.author_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <% if @like.location.present? %>
          <a href="/locations/<%= @like.location_id %>">
            <%= @like.location.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

